<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.ztiany.customview.canvas.draw.DrawTextView
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <com.ztiany.customview.canvas.draw.DrawRectView
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <com.ztiany.customview.canvas.draw.DrawCircle
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <com.ztiany.customview.canvas.draw.DrawOvalView
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <com.ztiany.customview.canvas.draw.DrawPointView
            android:layout_width="match_parent"
            android:layout_height="200dp"/>


        <com.ztiany.customview.canvas.paint.PathEffectView
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <com.ztiany.customview.canvas.paint.ColorMatrixView
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

    </LinearLayout>

</ScrollView>