<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/cardview_dark_background"
              android:orientation="vertical">

    <com.ztiany.customview.customer.ovalmenu.OvalMenu xmlns:android="http://schemas.android.com/apk/res/android"
                                                      android:layout_width="match_parent"
                                                      android:layout_height="0dp"
                                                      android:id="@+id/frag_oval_menu"
                                                      android:layout_weight="1">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/girl"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/girl"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/girl"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/girl"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/girl"/>
    </com.ztiany.customview.customer.ovalmenu.OvalMenu>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/frag_oval_menu_add_long_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="增大长轴"/>

            <Button
                android:id="@+id/frag_oval_menu_sub_long_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="减少长轴"/>

            <Button
                android:id="@+id/frag_oval_menu_add_short_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="增大短轴"/>

            <Button
                android:id="@+id/frag_oval_menu_sub_short_btn"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="减少短轴"/>

            <Button
                android:id="@+id/frag_oval_menu_hide_show_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示/隐藏椭圆"/>


        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>